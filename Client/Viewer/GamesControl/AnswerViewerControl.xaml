<UserControl x:Class="Client.Viewer.GamesControl.AnswerViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Viewer.GamesControl"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <MediaElement x:Name="media" LoadedBehavior="Manual" MediaEnded="media_MediaEnded"/>
        <Grid x:Name="gridAnswer">
            <Label x:Name="lblName1" Content="{Binding Path=names[0]}" HorizontalAlignment="Left" Height="36" Margin="497,109,0,0" VerticalAlignment="Top" Width="172" FontWeight="Bold" FontSize="18" Foreground="#FF945414"/>
            <Label x:Name="lblTime1" Content="" HorizontalAlignment="Left" Height="88" Margin="962,141,0,0" VerticalAlignment="Top" Width="186" FontWeight="Bold" FontSize="48" Foreground="#FFB7691B"/>
            <Label x:Name="lblAnswer1" Content="" HorizontalAlignment="Left" Height="88" Margin="466,141,0,0" VerticalAlignment="Top" Width="486" FontWeight="Bold" FontSize="36" Foreground="White"/>
            
            <Label x:Name="lblName2" Content="{Binding Path=names[1]}" HorizontalAlignment="Left" Height="36" Margin="497,283,0,0" VerticalAlignment="Top" Width="172" FontWeight="Bold" FontSize="18" Foreground="#FF945414"/>
            <Label x:Name="lblTime2" Content="" HorizontalAlignment="Left" Height="88" Margin="962,315,0,0" VerticalAlignment="Top" Width="186" FontWeight="Bold" FontSize="48" Foreground="#FFB7691B"/>
            <Label x:Name="lblAnswer2" Content="" HorizontalAlignment="Left" Height="88" Margin="466,315,0,0" VerticalAlignment="Top" Width="486" FontWeight="Bold" FontSize="36" Foreground="White"/>
            
            <Label x:Name="lblName3" Content="{Binding Path=names[2]}" HorizontalAlignment="Left" Height="36" Margin="497,441,0,0" VerticalAlignment="Top" Width="172" FontWeight="Bold" FontSize="18" Foreground="#FF945414"/>
            <Label x:Name="lblTime3" Content="" HorizontalAlignment="Left" Height="88" Margin="962,473,0,0" VerticalAlignment="Top" Width="186" FontWeight="Bold" FontSize="48" Foreground="#FFB7691B"/>
            <Label x:Name="lblAnswer3" Content="" HorizontalAlignment="Left" Height="88" Margin="466,473,0,0" VerticalAlignment="Top" Width="486" FontWeight="Bold" FontSize="36" Foreground="White"/>
            
            <Label x:Name="lblName4" Content="{Binding Path=names[3]}" HorizontalAlignment="Left" Height="36" Margin="497,598,0,0" VerticalAlignment="Top" Width="172" FontWeight="Bold" FontSize="18" Foreground="#FF945414"/>
