<UserControl x:Class="Client.PlayerClient.ImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.PlayerClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="image" Stretch="Uniform" Source="/PlayerClient/vyfactraw - Copy.png"/>
        <Rectangle x:Name="rectUL" Fill="Blue"/>
        <Rectangle x:Name="rectUR" Fill="Blue"/>
        <Rectangle x:Name="rectDL" Fill="Blue"/>
        <Rectangle x:Name="rectDR" Fill="Blue"/>
        <Rectangle x:Name="rectTT" Fill="Red"/>
    </Grid>
</UserControl>
